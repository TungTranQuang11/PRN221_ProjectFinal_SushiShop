@model ProjectFinal.Models.Customer

@{
    ViewData["Title"] = "Account Details";
}

<section class="page-banner">
    <div class="page-bg-wrapper p-r z-1 bg_cover pt-180 pb-110" style="background-image: url(/assets/images/bg/page-bg.jpg);">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="page-banner-content text-center">
                        <h1 class="page-title">Account Details</h1>
                        <ul class="breadcrumb-link">
                            <li><a href="@Url.Action("Index", "Home")">Home</a></li>
                            <li class="active">Account Details</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<section class="profile-section pt-80 pb-80">
    <div class="container">
        <div class="row">
            <div class="col-md-2">
                <div class="list-group">
                    <a href="@Url.Action("Profile", "User")" class="list-group-item list-group-item-action active">Account Details</a>
                    <a href="@Url.Action("OrderHistory", "User")" class="list-group-item list-group-item-action">My Orders</a>
                    <a href="@Url.Action("ChangePassword", "User")" class="list-group-item list-group-item-action">Change Password</a>
                    <a href="@Url.Action("Logout", "Authentication")" class="list-group-item list-group-item-action">Logout</a>
                </div>
            </div>
            <div class="col-md-10">
                @if (TempData["Success"] != null)
                {
                    <div class="alert alert-success">@TempData["Success"]</div>
                }
                @if (ViewBag.Error != null)
                {
                    <div class="alert alert-danger">@ViewBag.Error</div>
                }
                <form method="post" action="@Url.Action("Profile", "User")">
                    <h2 class="mb-4">Account Details</h2>

                    <div class="form-group pb-3">
                        <label for="fullname">Fullname <span class="text-danger">*</span></label>
                        <input type="text" id="fullname" name="fullname" class="form-control" value="@Model.FullName" required>
                    </div>

                    <div class="form-group pb-3">
                        <label for="email">Email <span class="text-danger">*</span></label>
                        <input type="email" id="email" name="email" class="form-control" value="@Model.Email" readonly>
                    </div>

                    <div class="form-group pb-3">
                        <label for="phone">Phone Number <span class="text-danger">*</span></label>
                        <input type="text" id="phone" name="phone" class="form-control" value="@Model.Phone" maxlength="10" required>
                    </div>

                    <div class="form-group pb-3">
                        <label for="address">Address <span class="text-danger">*</span></label>
                        <input type="text" id="address" name="address" class="form-control" value="@Model.Address" maxlength="100" required>
                    </div>

                    <button type="submit" class="btn btn-success">Save changes</button>
                </form>
            </div>
        </div>
    </div>
</section>
