<!--====== Start About Section ======-->
<section class="menu-section">
    <div class="menu-bg-wrapper gray-bg pt-120 pb-90">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <!--=== Section Title ===-->
                    <div class="section-title text-center mb-30 wow fadeInDown">
                        <span class="sub-title">Our special menu</span>
                        <h2>Enjoy Our Dishes</h2>
                        <p>Indulge in an array of meticulously crafted sushi rolls, artfully blending <br> fresh ingredients for a delightful taste experience.</p>
                    </div>
                </div>
            </div>
            <div class="row justify-content-center">
                <div class="col-lg-10">
                    <!--=== Foodix ===-->
                    <div class="foodix-tabs style-one mb-40 wow fadeInUp">
                        <ul class="nav nav-tabs">
                            @foreach (var category in Model)
                            {
                                <li>
                                    <button class="nav-link @(category.CategoryName == Model.First().CategoryName ? "active" : "")" data-bs-toggle="tab" data-bs-target="#cat@(category.CategoryName.Replace(" ", "").ToLower())">@category.CategoryName</button>
                                </li>
                            }
                        </ul>
                    </div>
                </div>
            </div>
            <!--=== Tab Content ===-->
            <div class="tab-content wow fadeInDown">
                @foreach (var category in Model)
                {
                    <div class="tab-pane @(category.CategoryName == Model.First().CategoryName ? "show active" : "") fade" id="cat@(category.CategoryName.Replace(" ", "").ToLower())">
                        <div class="row justify-content-center">
                            @foreach (var product in category.Products)
                            {
                                <div class="col-xl-4 col-md-6 col-sm-12">
                                    <div class="menu-item style-one mb-40">
                                        <div class="menu-thumbnail">
                                            <img src="/assets/images/menu/@product.Image" alt="Menu Image">
                                        </div>
                                        <div class="menu-info">
                                            <h4><a href="@Url.Action("ProductDetail", "Home", new { id = product.ProductId })">@product.ProductName</a></h4>
                                            <p>@product.Description</p>
                                            <p class="price">$@product.Price</p>
                                            @if (product.QuantityInStock > 0)
                                            {
                                                <a href="#" class="theme-btn style-two add-to-cart" data-productid="@product.ProductId">Add To Cart</a>
                                            }
                                            else
                                            {
                                                <span class="text-danger theme-btn style-two">Temporarily Unavailable</span>
                                            }
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                }
                <div class="row justify-content-center">
                    <div class="col-auto">
                        <div class="about-button wow fadeInDown">
                            <a href="@Url.Action("Index", "Product")" class="theme-btn style-one">View More</a>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</section>
