@{
    ViewData["Title"] = "About Us";
}

<!--====== Start Page Section ======-->
<section class="page-banner">
    <div class="page-bg-wrapper p-r z-1 bg_cover pt-130 pb-110" style="background-image: url(/assets/images/bg/page-bg.jpg);">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <!--=== Page Banner Content ===-->
                    <div class="page-banner-content text-center">
                        <h1 class="page-title">About Us</h1>
                        <ul class="breadcrumb-link">
                            <li><a href="@Url.Action("Index", "Home")">Home</a></li>
                            <li class="active">About Us</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section><!--====== End Page Section ======-->
<!--====== Start Page Section ======-->
<section class="intro-section pt-125">
    <div class="container">
        <div class="intro-wrapper_two">
            <div class="row">
                <div class="col-lg-6">
                    <div class="text-box mb-50 wow fadeInLeft">
                        <h3>Hi! Our Restaurant has been present for over 3 years in the market. We make the most of all our customers.</h3>
                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="text-box mb-50 wow fadeInRight">
                        <p>Embark on a delectable journey as we delve into the world of culinary delights and gastronomic adventures. Food is not just sustenance; it's an art that connects cultures, evokes memories, and stirs emotions. In this blog, we invite you to join us as we explore the fascinating realm.</p>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-12">
                    <div class="play-wrapper bg_cover text-center pt-130 pb-125 pl-10 pr-10 wow fadeInDown" style="background-image: url(/assets/images/bg/intro-bg-1.jpg);">
                        <div class="play-button">
                            <a href="https://www.youtube.com/watch?v=MYquTY8mvnc" class="video-popup"><i class="fas fa-play"></i></a>
                        </div>
                        <h2 class="text-uppercase text-white">Eat and enjoy in our <br> restaurant</h2>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section><!--====== End Page Section ======-->
<!--====== Start Team Section ======-->
<section class="team-section pt-110 pb-80">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="section-title text-center mb-55 wow fadeInDown">
                    <h2>Meet our special chef</h2>
                    <p>Introducing our esteemed culinary virtuoso, a maestro of flavors crafting exquisite dishes with passion, precision, and a touch of magic</p>
                </div>
            </div>
        </div>
        <div class="row justify-content-center">
            <div class="col-lg-4 col-md-6 col-sm-12">
                <div class="team-item style-two mb-40 wow fadeInUp" data-wow-delay=".35s">
                    <div class="member-image">
                        <img src="/assets/images/team/avatar.jpg" alt="Member Image">
                    </div>
                    <div class="member-info">
                        <h4 class="title">Tran Quang Tung</h4>
                        <span class="position">Executive chef</span>
                        <ul class="social-link">
                            <li><a href="https://www.facebook.com/tqtung11" target="_blank"><i class="fab fa-facebook-f"></i></a></li>
                            <li><a href="https://www.linkedin.com/in/tran-quang-tung-2b13422ba" target="_blank"><i class="fab fa-linkedin-in"></i></a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section><!--====== End Team Section ======-->
